@{
    ViewData["Title"] = "Adding Listing";
}

@model ListingForm

@section css {
    <link href="@Url.Content("~/css/addeventsstyle.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/css/nav.css")" rel="stylesheet" type="text/css" />
}

<header>
    <img src="../images/white-nosub-inflogo.png" alt="logo" class="white-logo">
    <input type="checkbox" id="nav-toggle" class="nav-toggle">
    <nav>
        <ul>
        <li><a href="/dashboard">Home</a></li>
        <li><a href="/broker-profile/{UserId}">My Profile</a></li>
        <li><a href="/logoff">Sign out</a></li>
        </ul>
    </nav>
    <label for="nav-toggle" class="nav-toggle-label">
        <span></span>
    </label>
</header>
<div class="ultimatecontainer">
    <div class="container"> 
        <form class="regbox" role="form" action="/add-listings" method="POST">
        <h4>Add A Listing</h4>
            <div class="row">
                <!-- Fields common to all users -->
                <!-- but that's super wrong? - love, Hailey -->
                <div class="col-lg" id="">
                    <div class="form-group">
                        <span asp-validation-for="MLSLink"></span>
                        <label asp-for="MLSLink">MLS Link</label>
                        <input type="text" asp-for="MLSLink" class="form-control" placeholder="Please enter URL">
                    </div>
                    <div class="form-group">
                        <span asp-validation-for="Price"></span>
                        <label for="Price">Price</label>
                        <input type="number" asp-for="Price" class="form-control">
                    </div>

                
                    <div class="form-group">
                        <span asp-validation-for="addressLine1"></span>
                        <label for="Address">Address</label>
                        <input type="text" asp-for="addressLine1" class="form-control">
                    </div>
                    <div class="form-group">
                        <span asp-validation-for="city"></span>
                        <label for="City">City</label>
                        <input type="text" asp-for="city" class="form-control">
                    </div>
                    <div class="form-group">
                        <span asp-validation-for="state"></span>
                        <label for="State">State</label>
                        <input type="text" asp-for="state" class="form-control">
                    </div>
                    <div class="form-group">
                        <span asp-validation-for="postalCode"></span>
                        <label for="postalCode">Postal Code</label>
                        <input type="text" asp-for="postalCode" class="form-control">
                    </div>
                    <div class="form-group">
                        <span asp-validation-for="Description"></span>
                        <label for="Description">Description</label>
                        <textarea type="textbox" asp-for="Description" class="form-control" placeholder="Please enter a description of the home."></textarea>
                    </div>
                    <div class="form-group">
                        <span asp-validation-for="ImgUrl"></span>
                        <label for="ImgUrl">Photo Url</label>
                        <input type="string" asp-for="ImgUrl" class="form-control">
                    </div>
                    <button type="submit" class="btn btn-primary">Add Listing</button>
                </div>
            </div>    
        </form>
    </div>
</div>