<!DOCTYPE html>
@{
    ViewData["Title"] = "Dashboard";
}
@model DashboardBrokerView;
@using Microsoft.AspNetCore.Http;

@section css {
    <link href="@Url.Content("~/css/dashboardstyle.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/css/nav.css")" rel="stylesheet" type="text/css" />
}
<head>
    <meta charset="utf-8">
</head>
<header>
    <img src="../images/white-nosub-inflogo.png" alt="logo" class="white-logo">
    <input type="checkbox" id="nav-toggle" class="nav-toggle">
    <nav>
      <ul>
        <li><a href="http://infinterest.com/#home">About</a></li>
        <li><a href="broker-profile/{UserId}">@Context.Session.GetInt32("userid") Profile</a></li>
        <li><a href="/logoff">Sign out</a></li>
      </ul>
    </nav>
    <label for="nav-toggle" class="nav-toggle-label">
        <span></span>
    </label>
</header>
<div id="dashboardcontainer">
    <div id="leftsection">
        <div class="dashsearch">
            <h4>Search Your Events</h4>
            <form action="">
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Near:</label>
                    <div class="col-sm-10" id="input">
                        <input type="text" class="form-control" placeholder="Zip Code">
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Radius:</label>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" placeholder="mi/km">
                    </div>
                </div>
                <div class="form-group">
                    <label for="price" class="price">Price Range</label>
                    <div class="daterangecontainer">
                        <input type="number" class="form-control daterange" min="10000" max="100000000" value="10000">
                        <label>to</label>
                        <input type="number" class="form-control daterange" min="10000" max="100000000" value="100000000">
                    </div>
                </div>
                <div class="form-group">
                    <label for="price" class="price">Date Range</label>
                    <div class="daterangecontainer">
                        <input type="date" class="form-control daterange">
                        <label>to</label>
                        <input type="date" class="form-control daterange">
                    </div>
                </div>
                <!-- Button trigger modal -->
                <button class="btn btn-secondary" type="button" data-toggle="modal" data-target="#exampleModalLong">Search</button>
            </form>
        </div>

    </div>
    <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLongTitle">Your search results</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="modal-result">
                        <img src="../images/kitchen-1799712_960_720.jpg" alt="kitchenpic" >
                        <div>
                            <h4>42352 43rd Ave SE</h4>
                            <h4>Belletown, WA 90528</h4>
                            <h6>June 2, 2019</h6>
                            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut ac est odio. Fusce lacus diam, elementum eget elit in, ultrices consectetur sapien. Aenean tincidunt hendrerit tempus.</p>
                            <a href="/event-detail"><h5>Details</h5></a>
                        </div>
                    </div>
                    <div class="modal-result">
                        <img src="../images/home2.jpg" alt="kitchenpic" class="respic">
                        <div>
                            <h4>44 Main St</h4>
                            <h4>Town Center, WA 90543</h4>
                            <h6>July 16, 2019</h6>
                            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut ac est odio. Fusce lacus diam, elementum eget elit in, ultrices consectetur sapien. Aenean tincidunt hendrerit tempus.</p>
                            <a href="/event-detail"><h5>Details</h5></a>
                        </div>
                    </div>
                    <div class="modal-result">
                        <img src="../images/home3.jpg" alt="kitchenpic" class="respic">
                        <div>
                            <h4>1234 Address Way</h4>
                            <h4>Cityville, WA 90528</h4>
                            <h6>August 28, 2019</h6>
                            <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Ut ac est odio. Fusce lacus diam, elementum eget elit in, ultrices consectetur sapien. Aenean tincidunt hendrerit tempus.</p>
                            <a href="/event-detail"><h5>Details</h5></a>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>

    <div id="middlesection">
        <h4>Available Vendors</h4>
        @{
            foreach (Vendor vendorAvailable in Model.AvailableVendors)
            {     
            <div class="vendordetails">
                <h4>@vendorAvailable.FirstName @vendorAvailable.LastName</h4>
                <h4>@vendorAvailable.Company</h4>
                <h4>@vendorAvailable.Contact</h4>
            </div>
            }
        }
    </div>
    <div id="rightsection">
        <div>
            <form>
                <button type="submit" class="btn btn-secondary" formaction="/add-listings">Add New Listing</button>
            </form>
            <h4>Your Listings</h4>
            @{
            foreach (Listing list in Model.UsersListings)
            {
            <div class="listingdetails">
                <img src="@list.ImgUrl" alt="" >
                <div>
                    //address
                <h4>@list.Zip</h4>
                <h4>@list.Price</h4>
                <h4>@list.ListingId</h4>
                <h4>@list.MLSLink</h4>
                /*<a href="broker-profile/{id}"><h6>@list.Broker</h6></a>*/
                    <div>
                    @{
                    foreach (Event finalized in Model.FinalizedEvents)
                    {     
                    <a href="event-detail/{eventId}"><h6>@finalized.OpenHouseDate</h6><h6>@finalized.OpenHouseTime</h6></a>
                    }
                    }
                    </div>
                    <div>
                    @{
                    foreach (Event pending in Model.PendingEvents)
                    {     
                    <a href="event-detail/{eventId}"><h6>@pending.OpenHouseDate</h6><h6>@pending.OpenHouseTime</h6></a>
                    }
                    }
                    </div>
                </div>
                
                <button type="submit" class="btn btn-secondary" formaction="add-event">Add Event</button>
            
            </div>
            }
        }

           
        </div>    
    </div>      
</div>